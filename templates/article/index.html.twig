{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<div class="container w-50 py-4">
        <h1 class='d-flex'>Liste des articles</h1>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('new_article') }}" class="btn btn-outline-success text-end">
            Ajouter une article
        </a>
        {% endif %}

        <table class="table">
            <thead>
				<tr>
					<th scope="col">Article</th>
                    <th scope="col">Auantit√©</th>

                    {% if is_granted('ROLE_ADMIN') %}
					<th scope="col">Action</th>
                    {% endif %}
				</tr>
			</thead>
            <tbody>
                {% for article in articles %}
                <tr>
                    <td>
                        {{ article.title }}
                    </td>
                    <td>
                        {{ article.stock }}
                    </td>

                    {% if is_granted('ROLE_ADMIN') %}
                    <td>
                        <ul class="list d-flex justify-content-between">
                            <div>
                                <a class="text-decoration-none" href="{{ path('edit_article', { id : article.id }) }}" title="Editer cetter article">Editer</a>
                            </div>
                            <div>
                                <a class="text-decoration-none" href="">Supprimer</a>
                                <form action="{{ path('delete_article', { id: article.id } ) }}" method="post" class="d-inline">
								<input type="hidden" name="token" value="{{ csrf_token('delete-article-'~ article.id) }}">
								<button class="btn btn-sm btn-outline-danger">
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewbox="0 0 16 16">
										<path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
										<path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
									</svg>
								</button>
							</form>
                            </div>
                        </ul>
                    </td>
                    {% endif %}

                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}