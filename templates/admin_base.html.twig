<!DOCTYPE html>
<html>

	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Le Jardin des Curieux
			{% endblock %}
		</title>
		<link rel="stylesheet" href="{{ asset('node_modules/@fortawesome/fontawesome-free/css/all.css') }}">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<!-- CSS only -->
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css%22%3E">
			<link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
			<link rel="stylesheet" href="{{ asset('css/footer.css') }}">
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			<!-- JavaScript Bundle with Popper -->
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
			{# js pour le menu burger #}
			<script src="{{ asset('js/men.js') }}" defer></script>
		{% endblock %}
	</head>
	<body></body>
	<body data-menu="vertical-menu" class="vertical-layout vertical-menu 2-column menu-expanded">
		<!-- Navbar -->
		<!-- fixed-top-->
			<nav
			role="navigation" class="header-navbar navbar-expand-sm navbar navbar-with-menu fixed-top navbar-dark navbar-shadow navbar-border"> <!-- BEGIN Navigation-->
			<div
				class="main-menu menu-dark menu-fixed menu-shadow">
				<!-- BEGIN Content-->
				<div class="content app-content">
					<div
						class="content-wrapper">
						<!-- content header-->
						<div class="content-header row">

							<a class="navbar-brand text logo" href="{{ path('app_home') }}">
								Lejardindescurieux
								{# <img src="../imgs/covers/logo2.png" alt="" class="border-rounded"> #}
							</a>

						</div>

						<!-- content body-->
						<div class="content-body d-block">
							<ul class=" me-auto mb-2 mb-lg-0">
								<li class="nav-item">
									<a class="nav-link text" aria-current="page" href="{{ path('app_home') }}">
										<i class="fa-solid fa-house"></i>
									</a>
								</li>

								{% if is_granted('ROLE_ADMIN') %}
									<li class="nav-item">
										<a class="nav-link text" href="{{ path('app_article') }}">Articles</a>
									</li>

									<li class="nav-item">
										<a class="nav-link text" href="{{ path('app_category') }}">Catégories</a>
									</li>
									<li class="nav-item">
										<a class="nav-link text" href="{{ path('user_account') }}">Utilisateur</a>
									</li>
								{% endif %}

								{% if app.user is null %}
									<li class="nav-item">
										<a class="nav-link text" href="{{ path('app_login') }}">Se connecter</a>
									</li>
								{% endif %}

								{% if app.user is not null %}
									<li class="nav-item">
										<a class="nav-link text" href="{{ path('app_logout') }}">Se déconnecter</a>
									</li>
								{% endif %}

								{% if is_granted('ROLE_ADMIN') %}
									<li class="nav-item">
										<a class="nav-link text" href="{{ path('app_admin') }}">Admin</a>
									</li>
								{% endif %}
							</ul>

						</div>
						<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
							<span class="navbar-toggler-icon"></span>
						</button>

						<form class="col-lg-4 d-none d-lg-block list-inline-item d-flex" role="search" action="{{ path('search') }}">
							<input class="form-control me-2" name="query" type="search" placeholder="Rechercher" aria-label="Search">
						</form>

						<div class="justify-content-end">
							<div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent"></div>
						</div>
					</nav>
					<div class="gradient"></div>
					{% block body %}{% endblock %}
				</body>
			</body>
		</html>
	</body>
</html>
