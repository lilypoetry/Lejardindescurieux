{% extends 'base.html.twig' %}

{% block title %}Category
{% endblock %}

{% block body %}

	<div class="container w-50 py-4">

		<div class="d-flex align-items-center justify-content-between pb-5">
			<h1 class="d-flex align-items-center justify-content-between">Liste des catégories</h1>

            {% if is_granted('ROLE_ADMIN') %}
			<a href="{{ path('new_category') }}" class="btn btn-outline-success align-items-right">
				Ajouter une catégorie
			</a>
		    {% endif %}
		</div>

		<table class="table">
			<thead>
				<tr>
					<th scope="col">Catégory</th>

					{% if is_granted('ROLE_ADMIN') %}
						<th class="text-center" scope="col">Action</th>
					{% endif %}
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>
							{{ category.name }}
						</td>

						{% if is_granted('ROLE_ADMIN') %}
							<td>
								<ul style="list-style: none; " class="d-flex justify-content-between">
									<div>
										<a class="text-decoration-none" href="{{ path('edit_category', { id : category.id }) }}">Editer
											<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-pencil-square" viewbox="0 0 16 16">
												<path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
												<path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
											</svg>
										</a>
									</div>
									<div>
										<a class="text-decoration-none" href="">Supprimer</a>
										<form action="{{ path('delete_category', { id: category.id } ) }}" method="post" class="d-inline">
											<input type="hidden" name="token" value="{{ csrf_token('delete-category-'~ category.id) }}">
											<button class="btn btn-sm btn-outline-danger">
												<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-trash" viewbox="0 0 16 16">
													<path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
													<path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
												</svg>
											</button>
										</form>
									</div>
								</ul>
							</td>
						{% endif %}

					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
