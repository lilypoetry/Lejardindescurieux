{% extends 'admin_base.html.twig' %}

{% block title %}Nouveau Marché
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('css/top.css') }}" rel="stylesheet">
	<link href="{{ asset('css/form.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container py-5">

		<div class="example-wrapper">

			<div class="d-flex align-items-center justify-content-between">
				<h1 class="d-flex align-items-center justify-content-between">Nouvelle marché</h1>
				<a href="{{ path('admin_market') }}" title="Nos marchés" class="btn btn-secondary btn-sm">
					Retour <i class="fa-solid fa-left-long"></i>
				</a>
			</div>

			<div class="formulaire">
				{{ form_start(form) }}
					{{ form_row(form.name) }}
					{{ form_row(form.addresse, {'id':"adresse"}) }}
					{{ form_row(form.city, {'id':"ville"}) }}
					{{ form_row(form.zipcode, {'id':"cp"}) }}
					{{ form_row(form.createdAt) }}
					{{ form_row(form.updatedAt) }}
					{{ form_row(form.user) }}
					<button class="btn btn-secondary btn-sm">{{ button_label|default('Enregistrer') }}</button>
				{{ form_end(form) }}
			</div>

		</div>
	</div>

{% endblock %}
