{% extends 'admin_base.html.twig' %}

{% block title %}Article !
{% endblock %}

{% block style %}
	{{ parent() }}
	<link href="{{ asset('css/top.css') }}" rel="stylesheet">
	<link href="{{ asset('css/image.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}

	<div class="container py-4">
		<div class="py-5">
			<div class="row">
				<div class="card col-lg-6 d-block align-items-center justify-content-between py-5">
					{% if vich_uploader_asset(article, 'coverFile') %}
						<img src="{{ vich_uploader_asset(article, 'coverFile')|imagine_filter('thumbnail') }}" alt="{{ article.title }}">
					{% endif %}
				</div>
				<div class="col-lg-6 d-block py-5">
					<div class="d-flex align-items-center justify-content-between">
						<p class="fs-4">{{ article.title }}</p>
					</div>
					<div class="d-flex align-items-center justify-content-between">
						<p>Prix :
							{{ article.price }}€</p>
					</div>
					<div class="d-flex align-items-center justify-content-between">
						{# <p class="muted">Quantité disponible :
							{{ article.stock }} pcs</p> #}
						<p>Catégory :
								{{ article.category.name }}</p>							
					</div>

					<div class="align-items-center justify-content-between pb-5">
						<p>Description :
							{{ article.description }}</p>
					</div>
				</div>
			</div>
			<a class="text-decoration-none btn btn-secondary btn-sm" href="{{ path('app_home') }}"><i class="fa-solid fa-square-caret-left"></i> Retour</a>
		</div>
	</div>
{% endblock %}
