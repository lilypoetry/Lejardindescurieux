{% extends 'admin_base.html.twig' %}

{% block title %}Nouvelle Categorie
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('css/top.css') }}" rel="stylesheet">
	<link href="{{ asset('css/form.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper formulaire py-4">

		<div class="d-flex align-items-center justify-content-between">
			<h1 class="d-flex align-items-center justify-content-between">Nouvelle catégorie</h1>

			<a href="{{ path('app_category') }}" title="Nouvelle catégorie" class="btn btn-secondary btn-sm">
				Retour <i class="fa-solid fa-left-long"></i>
			</a>
		</div>
		{{ form_start(form) }}
		{{ form_widget(form) }}
		<button class="btn btn-secondary btn-sm">{{ button_label|default('Enregistrer') }}</button>
		{{ form_end(form) }}
	</div>
	{% endblock %}
