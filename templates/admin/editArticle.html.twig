
{% extends 'admin_base.html.twig' %}

{% block title %}Modifier l'article{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('css/top.css') }}" rel="stylesheet">
    <link href="{{ asset('css/form.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}

    <style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
    <div class="example-wrapper formulaire py-4">
    
        <div class="d-flex align-items-center justify-content-between pb-5">
            <div>
                <h1 class="display-5 m-0">Modifier l'article</h1>
            </div>
            <a href="{{ path('app_admin') }}" title="Retour à la liste" class="btn btn-secondary btn-sm">
                Retour à la liste
            </a>
        </div>
        {{ form_start(form) }}
		{{ form_widget(form) }}
		<button class="btn btn-secondary btn-sm">{{ button_label|default('Enregistrer') }}</button>
		{{ form_end(form) }}

    </div>

{% endblock %}