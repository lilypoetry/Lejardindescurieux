{% extends 'base.html.twig' %}

{% block title %}Account Utilisateur !
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('css/top.css') }}" rel="stylesheet">
	<link href="{{ asset('css/compte.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}

	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class="example-wrapper py-4 container">

		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}

		<div class="d-block align-items-center justify-content-between">
			<h3 class="py-3">Bienvenue
				<span class="text-primary text-capitalize">
					{{ app.user.firstname }}
				</span>
			</h3>
			<p>Téléphone :
				{{ app.user.phone }}</p>
			<p>Email :
				{{ app.user.email }}</p>
			<p>Code postale :
				{{ app.user.zipcode }}
				- Ville :
				{{ app.user.city }}</p>

			{# Demander à utilisateur de completer ses donnée #}
			<a href="{{ path('edituser', { id: app.user.id }) }}" class=" btn btn-secondary btn-sm">
				Completer vos données
			</a>
		</div>
	</div>

{% endblock %}
