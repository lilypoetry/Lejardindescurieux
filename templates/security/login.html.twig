{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('css/top.css') }}" rel="stylesheet">
	<link href="{{ asset('css/login.css') }}" rel="stylesheet">
	<link href="{{ asset('css/form.css') }}" rel="stylesheet">
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/password.js') }}" defer></script>
{% endblock %}

{% block body %}

	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper formulaire">
		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					Vous êtes connecté sous :
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Se déconnecter</a>
				</div>
			{% endif %}

			<h1 class="h3 mb-3 font-weight-normal py-4">Connectez-vous !</h1>

			<label for="inputEmail">Email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
			{# <label for="inputPassword">Password</label> #}
			{# <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required> #}
			<div class="main-box">
				<div class="input-box pb-3">					
					<label for="inputPassword">Password</label>
					<input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" autocomplete="current-password" required>
					
					<div class="show-box">
						<a class="text-sm fw-lighter" href="#">Afficher password</a>
					</div>
				</div> 
			</div>
			{# Le lien pour reinisialisation du mot de passe #}
			<a class="py-3" href="{{ path('app_forgot_password_request') }}" title="Mot de passe oublié ?">
				Mot de passe oublié
			</a>

			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
						                See https://symfony.com/doc/current/security/remember_me.html #}

			<div class="checkbox mb-3">
				<label>
					<input type="checkbox" name="_remember_me">
					Se souvenir de moi
				</label>
			</div>
			<button class="btn btn-sm btn-secondary" type="submit">
				Se connecter
			</button>

		</form>
	</div>
{% endblock %}
