{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('css/top.css') }}" rel="stylesheet">
	<link href="{{ asset('css/login.css') }}" rel="stylesheet">
	<link href="{{ asset('css/form.css') }}" rel="stylesheet">
	<link href="{{ asset('css/button.css') }}" rel="stylesheet">
	<link href="{{ asset('css/password.css') }}" rel="stylesheet">
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/password.js') }}" defer></script>
{% endblock %}

{% block body %}

	<div class="container formulaire">
		<h1 class="h3 mb-3 font-weight-normal py-4">Connectez-vous !</h1>
		<form method="post" class="">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{# {% if app.user %}
				<div class="mb-3">
					Vous êtes connecté sous :
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Se déconnecter</a>
				</div>
			{% endif %} #}

			

			<label for="inputEmail">Email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
			
			<div class="main-box">
				<div class="input-box pb-3">					
					<label for="inputPassword">Password</label>
					<input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" autocomplete="current-password" required>

					{# Afficher cacher un mot de passe #}
					<span class="show-box">
						<a class="text-sm fw-lighter" href="#">Afficher mot de passe</a>
					</span>
				</div> 
			</div>

			{# Le lien pour reinisialisation du mot de passe #}
			<a class="py-3" href="{{ path('app_forgot_password_request') }}" title="Mot de passe oublié ?">
				Mot de passe oublié
			</a>

			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{# Remember me #}
			<div class="checkbox mb-3">
				<label>
					<input type="checkbox" name="_remember_me">
					Se souvenir de moi
				</label>
			</div>
			<button class="btn-reg" type="submit">
				Se connecter
			</button>

		</form>
	</div>
{% endblock %}
